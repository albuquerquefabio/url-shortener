# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build url-shortener`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t url-shortener`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system url-shortener && \
          adduser --system -G url-shortener url-shortener

COPY apps/url-shortener/dist url-shortener/
RUN chown -R url-shortener:url-shortener .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix url-shortener --omit=dev -f install

CMD [ "node", "url-shortener" ]
